{{>./layouts/header}}

<table class="table">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">Title</th>
			<th scope="col">Content</th>
		</tr>
	</thead>
	<tbody>
		<!-- mustache에서 Model 인터페이스 객체에 저장되서 넘어온 데이터의 사용 범위를 지정한다. -->
		<!-- Model 인터페이스 객체로 넘어온 데이터가 목록이면 알아서 반복 처리를 실행한다. -->
		{{#articleList}} <!-- Model 객체에서 넘어온 articleList에 데이터가 있으면 사용 시작 -->
		<tr>
			<td>{{id}}</td> <!-- 넘어온 객체의 멤버를 얻어온다. -->
			<td>
				<!-- 글 상세보기 링크 추가 -->
				<a href="/articles/{{id}}">{{title}}</a>
			</td>
			<td>{{content}}</td>
		</tr>
		{{/articleList}} <!-- articleList 사용 끝 -->
		<!-- 테이블에 저장된 글이 없을 때 메시지 출력 코드를 추가한다. -->
		{{^articleList}} <!-- Model 객체에서 넘어온 articleList에 데이터가 없으면 사용 시작 -->
		<tr>
			<td colspan="3">
				<marquee>테이블에 저장된 글이 없습니다.</marquee>
			</td>
		</tr>
		{{/articleList}} <!-- articleList 끝 -->
	</tbody>
</table>

<!-- 새 글쓰기 링크 추가 -->
<a href="/articles/new" class="btn btn-outline-primary" style="font-size: 14px;">글쓰기</a>

{{>./layouts/footer}}
